{{!< layouts/main }}

<section class="user-settings">
  <h2>Account Settings</h2>

  {{#if error}}
    <p class="error">{{error}}</p>
  {{/if}}

  {{#if success}}
    <p class="success">{{success}}</p>
  {{/if}}

  <!-- Change Password -->
  <form method="POST" action="/user/password" class="settings-form">
    <h3>Change Password</h3>

    <label>
      Current Password
      <input type="password" name="currentPassword" required />
    </label>

    <label>
      New Password
      <input type="password" name="newPassword" required />
    </label>

    <button type="submit">Update Password</button>
  </form>

  <!-- Change Display Name -->
  <form method="POST" action="/user/display-name" class="settings-form">
    <h3>Change Display Name</h3>

    <label>
      Display Name
      <input
        type="text"
        name="displayName"
        value="{{user.display_name}}"
        required
      />
    </label>

    <button type="submit">Update Display Name</button>
  </form>

  <!-- Profile Customization -->
  <form method="POST" action="/user/profile" class="settings-form">
    <h3>Profile Customization</h3>

    <label>
      Name Color
      <input
        type="color"
        name="nameColor"
        value="{{user.name_color}}"
      />
    </label>

    <button type="submit">Save Appearance</button>
  </form>
</section>
